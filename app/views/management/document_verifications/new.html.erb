<div data-alert class="callout success">
  <%= t("management.document_verifications.please_check_account_data") %>
</div>

<%= render 'management/user_permissions',
      message: t("management.document_verifications.in_census_has_following_permissions"),
      permissions: [:debates, :create_proposals, :support_proposals] %>

<%= form_for @document_verification,
    as: :document_verification,
    url: management_document_verifications_path do |f| %>
  <%= f.hidden_field :document_type %>
  <%= f.hidden_field :document_number %>
  <%= f.submit t("management.document_verifications.verify"), class: "button success" %>
<% end %>


<%= link_to t("management.document_verifications.erase_account_link"), "#", class: "delete js-toggle-link", data: { "toggle-selector" => "#erase-account-form" } %>

<div id="erase-account-form" style="display:none">
  <div class="callout alert medium-6">
    <%= t("management.document_verifications.erase_warning") %>
  </div>

  <%= link_to t("management.document_verifications.erase_submit"), erase_management_users_path, method: :delete, class: "button alert", data: { confirm: t("management.document_verifications.erase_account_confirm") } %>
</div>
