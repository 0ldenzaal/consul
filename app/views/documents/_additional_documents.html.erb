<% if documents.any? %>
  <div class="document-divider no-margin-top margin-bottom padding">
    <div class="row">
      <div class="small-12 medium-6 column">
        <div class="additional-document-link">
          <p>
            <strong><%= t('proposals.show.title_external_url') %></strong>
          </p>
          <% documents.each do |document| %>
            <p><span class="icon-document"></span>&nbsp;
            <%= link_to "#{document.title} <small>(#{document.humanized_content_type} | \
                        #{number_to_human_size(document.attachment_file_size)}</small>)".html_safe,
                        document.attachment.url,
                        target: "_blank",
                        title: t("shared.target_blank_html") %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
