<span class="in_favor">
  <%= link_to "up", debate_comment_votes_path(@debate, comment, value: 'yes'),
    method: "post", remote: true %>
  <%= comment.get_likes.size %>
</span>

<span class="against">
  <%= link_to "down", debate_comment_votes_path(@debate, comment, value: 'no'),
      method: "post", remote: true %>
  <%= comment.get_dislikes.size %>
</span>