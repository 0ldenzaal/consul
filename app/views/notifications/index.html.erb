<% if @notifications.empty? %>
  <div><%= t("notifications.index.empty_notifications") %></div>
<% else %>
  <div class="row">
    <ul>
      <%= render @notifications %>
    </ul>

    <div>
      <%= link_to t("notifications.index.mark_all_as_read"),
                  mark_all_as_read_notifications_path, method: :put %>
    </div>
  </div>
<% end %>