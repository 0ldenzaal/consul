<%= form_for [:admin, @poll] do |f| %>
  <div class="row">
    <div class="small-12 medium-6 column">
      <%= f.text_field :name,
                       placeholder: t('admin.polls.form.name'),
                       label:       t("admin.polls.form.name") %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 column">
      <label><%= t("admin.polls.form.starts_at") %></label>
      <input type="date">
    </div>

    <div class="small-12 medium-6 column">
      <label><%= t("admin.polls.form.ends_at") %></label>
      <input type="date">
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-4 column">
      <%= f.submit t("admin.polls.#{admin_submit_action(@poll)}.submit_button"),
                   class: "button success expanded" %>
    </div>
  </div>
<% end %>